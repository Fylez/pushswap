NAME = push_swap

SRC_DIR = include
SRC_DIR += printf
SRC_DIR += include
SRC_DIR += instructions

SRC = $(addprefix $(SRC_DIR)/, main.c ft_printf_hexa.c ft_printf.c ft_putchar.c ft_putnbr.c ft_putstr.c init.c radix.c push.c rotate.c reverse_rotate.c swap.c)

OBJ = $(SRC:.c=.o)

FLAGS = -Wall -Wextra -Werror

all: $(NAME)
	
$(NAME): $(OBJ)
	cc $(OBJ) -o $(NAME)

%.o: %.c
	cc -I$(SRC_DIR) -c $(FLAGS) $< -o $@

clean:
	$(MAKE) -C $(SRC_DIR) clean
	rm -f $(OBJ)

fclean: clean
	$(MAKE) -C $(SRC_DIR) fclean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
